  "scripts": {
    "clean": "shx rm -rf tmp dist",
    "buildDoc": "typedoc --out ./docs/pluginDoc/ src/",
    "buildLocal": "npm run tsc && npm run tslint && npm run webpack && npm run test && npm run dist",
    "jenkins": "npm run tsc && npm run tslint && npm run webpack && npm run test && npm run dist",
    "dist": "shx cp -r tmp/compiled/src/* dist && npm run minify",
    "minify": "uglifyjs dist/acrolinx-sidebar-sdk.js -o dist/acrolinx-sidebar-sdk.min.js",
    "test": "npm run testKarmaChromeHeadless",
    "testKarmaPhantomJS": "karma start test/karma.conf.js --browsers PhantomJS",
    "testKarmaChrome": "karma start test/karma.conf.js --browsers Chrome",
    "testKarmaChromeHeadless": "karma start test/karma.conf.js --browsers ChromeHeadless",
    "testKarmaBs": "karma start test/karma.conf.js --browsers bs_edge_win,bs_chrome_win,bs_firefox_win,bs_safari_macos",
    "testKarmaBsJenkins": "karma start test/karma.conf.js --browsers bs_edge_win,bs_chrome_win,bs_firefox_win",
    "tsc": "tsc",
    "tscWatch": "tsc -w",
    "tslint": "tslint -p tsconfig.json -t stylish  \"src/**/*.ts\" \"test/**/*.ts\"",
    "tslintFix": "tslint --fix -p tsconfig.json -t stylish \"src/**/*.ts\" \"test/**/*.ts\"",
    "webpack": "webpack",
    "webpack-dev-server": "webpack-dev-server --host 0.0.0.0"
  }
}
