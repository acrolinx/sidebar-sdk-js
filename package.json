    "karma-coverage": "^2.0.2",
    "karma-junit-reporter": "^2.0.1",
    "karma-mocha": "^2.0.1",
    "mocha": "^7.1.2",
    "quill": "^1.3.7",
    "shx": "^0.3.2",
    "tinymce": "^4.9.10",
